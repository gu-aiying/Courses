<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Courses" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorSecondary">@color/dark_gray</item>

        <!-- Цвет текста на цветных фонах -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Фоны и поверхности -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/dark_surface_variant</item>
        <item name="colorSurfaceContainer">@color/green</item>
        <item name="colorSurfaceVariant">@color/dark_surface_variant</item>
        <item name="boxBackgroundColor">@color/dark_surface_variant</item>

        <!-- Цвет текста на фонах -->
        <item name="colorOnBackground">@color/dark_gray</item>
        <item name="colorOnSurface">@color/menu_gray</item>
        <item name="colorOnSurfaceVariant">@color/menu_gray</item>

        <item name="fontFamily">robot</item>

        <!-- Системные бары -->
        <item name="android:statusBarColor">@color/dark_surface</item>
        <item name="android:navigationBarColor">@color/dark_surface_menu</item>

        <!-- Дополнительные настройки -->
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="Theme.Courses" parent="Base.Theme.Courses" />

</resources>